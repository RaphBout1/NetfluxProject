{% extends 'base.html.twig' %}




{% block title %}Series

{% endblock %}


{% block body %}
	<div id="poster">
		<h1>Series</h1>
		<div id="search">
			<form action : path'series_show' method = "get">
   			<input type = "text" name = "terme">
   			<input type = "submit" name = "s" value = "Rechercher">
  			</form>
		</div>

		<div id="tablePoster">

			{% for series in series %}

					<div class="imgLien">
						<a href="{{ path('series_show', {'id': series.id}) }}"><img class="imgInfo" src="{{path('controleur_poster_series_show', {'id':series.id})}}"/></a>
                        <p class="textInfo">{{ series.title }}</p>

				</div>

			{% endfor %}

		</div>
	</div>

{% endblock %}

