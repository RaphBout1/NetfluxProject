{% extends 'base.html.twig' %}

{% block title %}Series{% endblock %}

{% block body %}
    <h1>Series</h1>

    <table class="table">
        <tbody>
            {% for series in series %}
            <tr>
                
                <td>{{ series.title }}</td>
            </tr>
            
            <tr>
                
                <td><img src="{{path('controleur_poster_series_show', {'id':series.id})}}" /></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('series_index') }}">back to list</a>

   
{% endblock %}
