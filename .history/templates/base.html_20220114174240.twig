					<a href="{{ path('series_poster') }}">Series</a>
					{% if app.user}
						if app.user.Admin == 1{

						}
							
						{% endif %}
					{% endif %}

				</div>
				{% block connexion %}
					<div id="connexion">
						{% if app.user %}
							<a href="{{ path('app_logout') }}">Se déconnecter</a>
						{% else %}
							<a href="{{ path('app_login') }}">Se connecter</a>
						{% endif %}


					</div>
				{% endblock %}

			</div>

		{% endblock %}
		{% block body %}{% endblock %}
	</body>
</html>

