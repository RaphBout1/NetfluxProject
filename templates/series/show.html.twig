{% extends 'base.html.twig' %}


{% block stylesheets %}
	<link href="{{ asset('CSS/poster.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block title %}Series

{% endblock %}
{% block javascripts %}
	<script src="{{ asset('infos.js') }}"></script>
{% endblock %}


{% block body %}
	<div id="poster">
		<div id="menuShearch">
			<h1>Series</h1>
			<div id="search" >
				<form action : path'series_poster' method="get">
					<input type="text" id="shearch" name="terme">
					<button type="submit" class="submitBouton" value="" onmouseover="afficherDef('shearch')"><img src="loupe.png"></img></button>
				</form>
			</div>
		</div>

		<div id="tablePoster">

			{% for series in series %}

				<div class="imgLien">
					<a href="{{ path('series_show', {'id': series.id}) }}"><img class="imgInfo" src="{{path('controleur_poster_series_show', {'id':series.id})}}"/></a>
					<p class="textInfo">{{ series.title }}</p>

				</div>

			{% endfor %}

		</div>
		{# display navigation #}
		<div class="navigation">
			{{ knp_pagination_render(series) }}
		</div>
	</div>


{% endblock %}

