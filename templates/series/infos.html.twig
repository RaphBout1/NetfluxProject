{% extends 'base.html.twig' %}

{% block title %}Series
{% endblock %}
{% block stylesheets %}
	<link href="{{ asset('CSS/info.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('infos.js') }}"></script>
{% endblock %}

{% block body %}
	<div id="serieInfo">

		<div id="infos">
			<h2>
				<a href="https://www.imdb.com/title/{{ series.imdb }}">{{ series.title }}</a>
			</h2>
			<p>
				<i>{{ series.plot }}</p>

				{% if series.director is not null%}
					<p>
						<b>Directeur :</b>
						{{ series.director }}</p>
				{% endif %}
				{% if series.awards is not null%}
					<p>
						<b>Awards :</b>
						{{ series.awards }}</p>
				{% endif %}
				{% if series.yearStart is not null%}
					<p>
						<b>YearStart :</b>
						{{ series.yearStart }}</p>
				{% endif %}
				{% if series.yearEnd is not null%}
					<p>
						<b>YearEnd :</b>
						{{ series.yearEnd }}</p>
				{% endif %}
				<div id="saisons">
					<h2>Les Saisons :</h2>

					{% for season in seasons %}
						<div class="saison">

							<h3 class="{{ path('series_show', {'id': series.id}) }}" onclick="afficher('{{season.id}}')">Saison:
								{{season.number}}
								â“¥</h3>
							<div class='episodes' id="{{season.id}}">
							{{ render(controller('App\\Controller\\SeriesController::episodes', {'id': season.id})) }}
							</div>
						</div>
					{% endfor %}
				</div>
			</p>
		</div>
		<div id="boutonSuivre">

			{% if app.user %}
				<form action="{{ path('suivre_serie', {'id': series.id}) }}" method="post" class="suivre">
					<input type="submit" value="{% if app.user.SerieSuivis(app.user, series) %}Ne plus suivre{% else %}Suivre{% endif %}">
				</form>
			{% endif %}
		</div>

		<div id="trailer">
			<iframe id="ytplayer" type="text/html" width="640" height="360" src="https://www.youtube.com/embed/{{idvideo}}?autoplay=1&mute=1&loop=1&playlist={{idvideo}}&modestbranding=1&rel=0" frameborder="0"/>
		</div>
	</div>


{% endblock %}

